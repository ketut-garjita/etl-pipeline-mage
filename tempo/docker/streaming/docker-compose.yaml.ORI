networks:
  default:
    name: ${NET}
    external: true
services:
  stream:
      build:
        context: ../../streaming_pipeline
      container_name: dataeng-2-stream
      command: python producer.py
      volumes:
        - ~/github/streaming-batch-project-2/streaming_pipeline:/home/streaming_pipeline
      working_dir: /home/streaming_pipeline
      environment:
        PYTHONUNBUFFERED: 1
        KAFKA_BOOTSTRAP_SERVERS: LAINTEXT://kafka-kraft:29092 
